<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:text="x"
        android:textColor="@color/black"
        android:background="@drawable/circle_button"
        android:contentDescription="Cancelar"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:text="Editar"
        android:textColor="@color/myDarkGray"
        android:textSize="20dp"
        android:background="@drawable/show_inventory_image"
       />

    <TextView
        android:id="@+id/viewNameProduct"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nombre del producto:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/etEditProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:hint="Producto"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="#AAAAAA"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/viewNameProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/viewNumProduct"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="¿Cuántas unidades?"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etEditProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        />

    <EditText
        android:id="@+id/etEditNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="24dp"
        android:hint="#"
        android:inputType="number"
        android:padding="16dp"
        android:textColorHint="#AAAAAA"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/viewNumProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/viewPrice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Precio de cada unidad"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etEditNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        />

    <EditText
        android:id="@+id/etEditPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="24dp"
        android:hint="$"
        android:inputType="number"
        android:padding="16dp"
        android:textColorHint="#AAAAAA"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/viewPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEditPrice"
        android:gravity="center">

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/edit_button"
            android:background="@color/white"
            android:outlineProvider="none"
            />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/delete_button"
            android:background="@color/white"
            android:outlineProvider="none"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>